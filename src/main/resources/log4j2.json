{
  "configuration": {
    "name": "Nanoleaf",
    "status": "error",
    "appenders": {
      "appender": [
        {
          "type": "RollingFile",
          "name": "DEFAULT",
          "filePattern": "logs/nanoleaf.log",
          "append": false,
          "SizeBasedTriggeringPolicy": { "size": "1 MB" },
          "PatternLayout": {
            "pattern": "%d{ISO8601} %-5level %-25logger{1}%notEmpty{ [%marker]} - %msg%throwable{20}%n"
          }
        },
        {
          "type": "RollingFile",
          "name": "mDNS",
          "fileName": "logs/mdns.log",
          "filePattern": "logs/mdns-%i.log",
          "append": false,
          "DefaultRolloverStrategy": {
            "max": 1
          },
          "SizeBasedTriggeringPolicy": { "size": "1 MB" },
          "PatternLayout": {
            "pattern": "%d{ISO8601} %-5level %-25logger{1}%notEmpty{ [%marker]} - %msg%throwable{20}%n"
          }
        },
        {
          "type": "RollingFile",
          "name": "HttpClient",
          "fileName": "logs/client.log",
          "filePattern": "logs/client-%i.log",
          "append": false,
          "DefaultRolloverStrategy": {
            "max": 1
          },
          "SizeBasedTriggeringPolicy": { "size": "1 MB" },
          "PatternLayout": {
            "pattern": "%d{ISO8601} %-5level %-25logger{1}%notEmpty{ [%marker]} - %msg%throwable{20}%n"
          }
        }
      ]
    },
    "loggers": {
      "root": {
        "level": "debug",
        "AppenderRef": {
          "ref": "DEFAULT"
        }
      },
      "logger": [
        {
          "name": "javax.jmdns",
          "additivity": false,
          "level": "warn",
          "AppenderRef": {
            "ref": "mDNS"
          }
        },
        {
          "name": "com.dylowen.house.nanoleaf.mdns",
          "additivity": false,
          "level": "info",
          "AppenderRef": {
            "ref": "mDNS"
          }
        },
        {
          "name": "io.netty",
          "additivity": false,
          "level": "info",
          "AppenderRef": {
            "ref": "HttpClient"
          }
        },
        {
          "name": "org.asynchttpclient",
          "additivity": false,
          "level": "info",
          "AppenderRef": {
            "ref": "HttpClient"
          }
        },
        {
          "name": "com.dylowen.house.unifi.UnifiClient",
          "additivity": false,
          "level": "info",
          "AppenderRef": {
            "ref": "HttpClient"
          }
        },
        {
          "name": "SSLContextBuilder",
          "additivity": false,
          "level": "info",
          "AppenderRef": {
            "ref": "HttpClient"
          }
        }
      ]
    }
  }
}