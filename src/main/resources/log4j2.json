{
  "configuration": {
    "name": "Nanoleaf",
    "status": "error",
    "appenders": {
      "appender": [
        {
          "type": "RollingFile",
          "name": "DEFAULT",
          "filePattern": "logs/nanoleaf.log",
          "append": false,
          "SizeBasedTriggeringPolicy": { "size": "10 MB" },
          "PatternLayout": {
            "pattern": "%d{ISO8601} %-5level %-25logger{1}%notEmpty{ [%marker]} - %msg%throwable{20}%n"
          }
        },
        {
          "type": "File",
          "name": "MDNS",
          "fileName": "logs/mdns.log",
          "append": false,
          "PatternLayout": {
            "pattern": "%d{ISO8601} %-5level %-25logger{1}%notEmpty{ [%marker]} - %msg%throwable{20}%n"
          }
        }
      ]
    },
    "loggers": {
      "root": {
        "level": "debug",
        "AppenderRef": {
          "ref": "DEFAULT"
        }
      },
      "logger": [
        {
          "name": "javax.jmdns",
          "additivity": false,
          "level": "warn",
          "AppenderRef": {
            "ref": "MDNS"
          }
        },
        {
          "name": "com.dylowen.nanoleaf.mdns",
          "additivity": false,
          "level": "debug",
          "AppenderRef": {
            "ref": "MDNS"
          }
        }
      ]
    }
  }
}